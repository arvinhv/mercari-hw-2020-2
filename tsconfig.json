{
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react",
        "typeRoots": [
            "./types"
        ],
        "paths": {
            "src/*": [
                "./src/*"
            ],
            "styles/*": [
                "./src/styles/*"
            ],
            "components/*": [
                "./src/components/*"
            ],
            "layout/*": [
                "./src/layout/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "node_modules/@types",
        "types/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}